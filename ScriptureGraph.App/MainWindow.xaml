            </StackPanel>
        </DockPanel>
        <ScrollViewer
            HorizontalScrollBarVisibility="Auto"
            VerticalScrollBarVisibility="Disabled">
            <StackPanel Orientation="Horizontal" Name="BrowseArea" DockPanel.Dock="Bottom" >
                <Grid>
                    <TextBlock
                        Height="24"
                        VerticalAlignment="Top"
                        Background="#FFD1BF49"
                        TextAlignment="Center">
                        Old Testament / Isaiah / Chapter 1
                    </TextBlock>
                    <FlowDocumentScrollViewer
                        Name="ReadingPane1"
                        Margin="0,24,0,0"
                        Width="{DynamicResource ReadingPaneWidth}">
                        <FlowDocument
                            Background="{DynamicResource DocumentReaderPageBackground}">
                            <Section>
                                <Paragraph
                                    FontSize="{DynamicResource TitleFontSize}"
                                    Margin="{DynamicResource TitleMargin}"
                                    TextAlignment="Center">
                                    Isaiah
                                </Paragraph>
                                <Paragraph
                                    FontSize="{DynamicResource SubtitleFontSize}"
                                    Margin="{DynamicResource SubtitleMargin}"
                                    TextAlignment="Center">
                                    Chapter 42
                                </Paragraph>
                            </Section>
                            <Section
                                TextAlignment="Justify"
                                FontFamily="{DynamicResource SerifFontFamily}"
                                FontSize="{DynamicResource VerseFontSize}"
                                Margin="{DynamicResource ScriptureParagraphMargin}">

                                <Paragraph Tag="ot-isa-42-0" >
                                    <Italic>Isaiah speaks about the Messiah—The Lord will bring His law and His justice, be a light to the Gentiles, and free the prisoners—Praise the Lord.</Italic>
                                </Paragraph>
                                <Paragraph Tag="ot-isa-42-1" >
                                    <Floater Padding="0"
                                        Margin="{DynamicResource VerseNumMargin}"
                                        FontSize="{DynamicResource VerseNumFontSize}"
                                        HorizontalAlignment="Left"
                                        IsEnabled="False">
                                        <Paragraph>1</Paragraph>
                                    </Floater>
                                    Behold my servant, whom I uphold; mine elect, in whom my soul delighteth; I have put my spirit upon him: he shall bring forth judgment to the Gentiles.
                                </Paragraph>
                                <Paragraph Tag="ot-isa-42-2" >
                                    <Floater Padding="0"
                                                Margin="{DynamicResource VerseNumMargin}"
                                                FontSize="{DynamicResource VerseNumFontSize}"
                                                HorizontalAlignment="Left" IsEnabled="False">
                                        <Paragraph>2</Paragraph>
                                    </Floater>
                                    Behold my servant, whom I uphold; mine elect, in whom my soul delighteth; I have put my spirit upon him: he shall bring forth judgment to the Gentiles.
                                </Paragraph>
                                <BlockUIContainer>
                                    <UniformGrid>
                                        <Button DockPanel.Dock="Left" Content="Previous"></Button>
                                        <Button DockPanel.Dock="Right" Content="Next"></Button>
                                    </UniformGrid>
                                </BlockUIContainer>
                            </Section>
                        </FlowDocument>
                    </FlowDocumentScrollViewer>
                </Grid>
                <Grid>
                    <TextBlock
                        Height="24"
                        Panel.ZIndex="1"
                        VerticalAlignment="Top"
                        Background="#FFD1BF49"
                        TextAlignment="Center"
                        Name="ReadingPane2Header">
                        Book of Mormon / Alma / Chapter 36
                    </TextBlock>
                    <FlowDocumentScrollViewer
                        Name="ReadingPane2"
                        Margin="0,24,0,0"
                        Width="{DynamicResource ReadingPaneWidth}">

                    </FlowDocumentScrollViewer>
                </Grid>
                <StackPanel
                    Orientation="Vertical">
                    <FlowDocumentScrollViewer Name="ReadingPane3"
                        Width="{DynamicResource ReadingPaneWidth}">

                    </FlowDocumentScrollViewer>
                </StackPanel>
            </StackPanel>
        </ScrollViewer>
    </DockPanel>
</Window>
