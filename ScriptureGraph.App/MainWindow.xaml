                    </Canvas>
                </Grid>
                <Button
                Name="SearchButton"
                Content="Search" Click="SearchButton_Click"></Button>
                <Button
                Name="BrowseButton"
                Content="Browse"></Button>
                <DockPanel Background="Aquamarine">
                    <DockPanel DockPanel.Dock="Top" Background="LightSalmon">
                        <TextBlock
                            Padding="0"
                            Margin="0"
                            Foreground="Gray"
                            Background="Honeydew"
                            Text="Person"
                            HorizontalAlignment="Left">
                        </TextBlock>
                        <Button
                            DockPanel.Dock="Right"
                            Width="20"
                            Height="20" 
                            Padding="0"
                            Margin="0"
