        xmlns:local="clr-namespace:ScriptureGraph.App"
        mc:Ignorable="d"
        Title="MainWindow" Height="497" Width="907"
    xmlns:System="clr-namespace:System;assembly=System.Runtime" Loaded="Window_Loaded">
    <Window.Resources>
        <FontFamily x:Key="SerifFontFamily">Palatino, Palatino Linotype, Palatino-Roman, Pahoran, Noto Sans Myanmar, NotoSansMyanmar, SaysetthaldsLao, NotoSerifTamil, serif</FontFamily>
        <System:Double x:Key="VerseFontSize">16</System:Double>
        <System:Double x:Key="TitleFontSize">32</System:Double>
        <Thickness x:Key="TitleMargin">0,0,0,0</Thickness>
        <System:Double x:Key="SubtitleFontSize">18</System:Double>
        <Thickness x:Key="SubtitleMargin">0,0,0,10</Thickness>
        <System:Double x:Key="VerseNumFontSize">12</System:Double>
        <Thickness x:Key="DefaultParagraphMargin">10,0,10,20</Thickness>
        <Thickness x:Key="ScriptureParagraphMargin">10,0,10,5</Thickness>
        <SolidColorBrush x:Key="DocumentReaderPageBackground" Color="#FFF2F2F2"/>
        <Thickness x:Key="VerseNumMargin">0,0,5,0</Thickness>
        <System:Double x:Key="ReadingPaneWidth">500</System:Double>
    </Window.Resources>
