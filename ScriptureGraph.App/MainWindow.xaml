<Window x:Class="ScriptureGraph.App.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ScriptureGraph.App"
        mc:Ignorable="d"
        Title="MainWindow" Height="469" Width="795"
    xmlns:System="clr-namespace:System;assembly=System.Runtime">
    <Window.Resources>
        <FontFamily x:Key="VerseFontFamily">Palatino, Palatino Linotype, Palatino-Roman, Pahoran, Noto Sans Myanmar, NotoSansMyanmar, SaysetthaldsLao, NotoSerifTamil, serif</FontFamily>
        <System:Double x:Key="VerseFontSize">16</System:Double>
        <System:Double x:Key="VerseNumFontSize">12</System:Double>
        <Thickness x:Key="VerseParagraphMargin">10,0,10,0</Thickness>
        <SolidColorBrush x:Key="DocumentReaderPageBackground" Color="#FFF2F2F2"/>
        <Thickness x:Key="VerseNumMargin">0,0,5,0</Thickness>
    </Window.Resources>
    <DockPanel Name="ViewRoot" Background="#FFC23A3A">
        <DockPanel
            Name="Ribbon"
            DockPanel.Dock="Top"
            Background="#FF48972B"
            Panel.ZIndex="50">
            <StackPanel Orientation="Horizontal" Height="50">
                <Button
                    Name="TestButton"
                    Content="Whatups"
                    Click="TestButton_Click"></Button>
                <Grid Name="SearchBoxAndFlyoutGrid"
                      Height="30"
                      Margin="20,0,20,0">
                    <TextBox
                        Name="SearchTextBox"
                        Width="300"
                        FontSize="16"
                        Height="30"
                        Text="Enter search term here"
                        VerticalAlignment="Center"
                        TextAlignment="Left"></TextBox>
                    <Canvas
                        Name="SearchFlyout"
                        Margin="0,30,0,0">
                        <StackPanel
                            Name="SearchFlyoutList"
                            Orientation="Vertical"
                            Background="AntiqueWhite">
                            <StackPanel
                                Orientation="Horizontal"
                                VerticalAlignment="Center">
                                <TextBlock
                                    Margin="10"
                                    FontSize="16"
                                    VerticalAlignment="Center"
                                    Text="russell m nelson"></TextBlock>
                                <TextBlock
                                    Margin="10"
                                    FontSize="14"
                                    Foreground="Gray"
                                    VerticalAlignment="Center"
                                    Text="Search Phrase"></TextBlock>
                            </StackPanel>
                            <StackPanel
                                Orientation="Horizontal"
                                VerticalAlignment="Center">
                                <TextBlock
                                    Margin="10"
                                    FontSize="16"
                                    VerticalAlignment="Center"
                                    Text="Russell M. Nelson"></TextBlock>
                                <TextBlock
                                    Margin="10"
                                    FontSize="14"
                                    Foreground="Gray"
                                    VerticalAlignment="Center"
                                    Text="Person"></TextBlock>
                            </StackPanel>
                        </StackPanel>
                    </Canvas>
                </Grid>
                <DockPanel Background="Aquamarine">
                    <DockPanel DockPanel.Dock="Top" Background="LightSalmon">
                        <TextBlock
                            Padding="0"
                            Margin="0"
                            Foreground="Gray"
                            Background="Honeydew"
                            Text="Person"
                            HorizontalAlignment="Left">
                        </TextBlock>
                        <Button
                            DockPanel.Dock="Right"
                            Width="20"
                            Height="20" 
                            Padding="0"
                            Margin="0"
                            Content="X"
                            HorizontalAlignment="Right">
                        </Button>
                    </DockPanel>
                    <TextBlock
                        Padding="5"
                        DockPanel.Dock="Bottom"
                        Text="Russell M. Nelson"></TextBlock>
                </DockPanel>
            </StackPanel>
        </DockPanel>
        <ScrollViewer
            HorizontalScrollBarVisibility="Auto"
            VerticalScrollBarVisibility="Disabled">
            <StackPanel Orientation="Horizontal" Name="BrowseArea" DockPanel.Dock="Bottom" >
                <Grid Width="400">
                    <TextBlock
                        Height="24"
                        VerticalAlignment="Top"
                        Background="#FFD1BF49"
                        TextAlignment="Center">
                        Old Testament / Isaiah / Chapter 1
                    </TextBlock>
                    <FlowDocumentScrollViewer
                        Name="ReadingPane1"
                        Margin="0,24,0,0">
                        <FlowDocument
                            Background="{DynamicResource DocumentReaderPageBackground}">
                            <Section>
                                <Paragraph FontSize="18" TextAlignment="Center">
                                    Isaiah
                                </Paragraph>
                                <Paragraph FontSize="16" TextAlignment="Center">
                                    Chapter 42
                                </Paragraph>
                            </Section>
                            <Section
                                TextAlignment="Justify"
                                FontFamily="{DynamicResource VerseFontFamily}"
                                FontSize="{DynamicResource VerseFontSize}"
                                Margin="{DynamicResource VerseParagraphMargin}">

                                <Paragraph Tag="ot-isa-42-0" >
                                    <Italic>Isaiah speaks about the Messiah—The Lord will bring His law and His justice, be a light to the Gentiles, and free the prisoners—Praise the Lord.</Italic>
                                </Paragraph>
                                <Paragraph Tag="ot-isa-42-1" >
                                    <Floater Padding="0"
                                        Margin="{DynamicResource VerseNumMargin}"
                                        FontSize="{DynamicResource VerseNumFontSize}"
                                        HorizontalAlignment="Left"
                                        IsEnabled="False">
                                        <Paragraph>1</Paragraph>
                                    </Floater>
                                    Behold my servant, whom I uphold; mine elect, in whom my soul delighteth; I have put my spirit upon him: he shall bring forth judgment to the Gentiles.
                                </Paragraph>
                                <Paragraph Tag="ot-isa-42-2" >
                                    <Floater Padding="0"
                                                Margin="{DynamicResource VerseNumMargin}"
                                                FontSize="{DynamicResource VerseNumFontSize}"
                                                HorizontalAlignment="Left" IsEnabled="False">
                                        <Paragraph>2</Paragraph>
                                    </Floater>
                                    Behold my servant, whom I uphold; mine elect, in whom my soul delighteth; I have put my spirit upon him: he shall bring forth judgment to the Gentiles.
                                </Paragraph>
                                <BlockUIContainer>
                                    <UniformGrid>
                                        <Button DockPanel.Dock="Left" Content="Previous"></Button>
                                        <Button DockPanel.Dock="Right" Content="Next"></Button>
                                    </UniformGrid>
                                </BlockUIContainer>
                            </Section>
                        </FlowDocument>
                    </FlowDocumentScrollViewer>
                </Grid>
                <Grid Width="400">
                    <TextBlock
                        Height="24"
                        Panel.ZIndex="1"
                        VerticalAlignment="Top"
                        Background="#FFD1BF49"
                        TextAlignment="Center">
                        Book of Mormon / Alma / Chapter 36
                    </TextBlock>
                    <FlowDocumentScrollViewer
                        Name="ReadingPane2"
                        Margin="0,24,0,0">

                    </FlowDocumentScrollViewer>
                </Grid>
                <StackPanel
                    Orientation="Vertical" 
                    Width="400">
                    <FlowDocumentScrollViewer Name="ReadingPane3" Width="400" >

                    </FlowDocumentScrollViewer>
                </StackPanel>
            </StackPanel>
        </ScrollViewer>
    </DockPanel>
</Window>
